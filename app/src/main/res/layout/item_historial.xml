<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:id="@+id/itemHistorial">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" app:srcCompat="@drawable/ic_carrito" android:id="@+id/imgHistorialImagen"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:id="@+id/tvHistorialNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Producto"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/imgHistorialImagen" android:layout_marginStart="8dp"/>
        <TextView
                android:text="FechaCompra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvHistorialFecha"
                app:layout_constraintStart_toStartOf="@+id/tvHistorialNombre"
                app:layout_constraintTop_toBottomOf="@+id/tvHistorialNombre" android:layout_marginTop="8dp"/>
        <TextView
                android:text="Precio"
                android:layout_width="41dp"
                android:layout_height="wrap_content" android:id="@+id/tvHistorialPrecio"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvHistorialFecha"
                app:layout_constraintStart_toStartOf="@+id/tvHistorialFecha"/>
        <TextView
                android:text="Descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvHistorialDescripcion"
                app:layout_constraintStart_toStartOf="@+id/tvHistorialPrecio"
                app:layout_constraintTop_toBottomOf="@+id/tvHistorialPrecio" android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

